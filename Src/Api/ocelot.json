{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/orders/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "orderservice",
          "Port": 8020
        }
      ],
      "SwaggerKey": "orders",
      "UpstreamPathTemplate": "/api/orders/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AddHeadersToRequest": {
        "UserToken": "{UserToken}"
      },
      "QoSOptions": { // Circuit Breaker
        "ExceptionsAllowedBeforeBreaking": 3,
        "DurationOfBreak": 30000,
        "TimeoutValue": 10000
      }
    },
    {
      "DownstreamPathTemplate": "/api/delivery/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "deliveryservice",
          "Port": 8030
        }
      ],
      "SwaggerKey": "delivery",
      "UpstreamPathTemplate": "/api/delivery/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AddHeadersToRequest": {
        "UserToken": "{UserToken}"
      },
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 3,
        "DurationOfBreak": 30000,
        "TimeoutValue": 10000
      }
    },
    {
      "DownstreamPathTemplate": "/api/users/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "userservice",
          "Port": 8010
        }
      ],
      "SwaggerKey": "users",
      "UpstreamPathTemplate": "/api/users/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AddHeadersToRequest": {
        "UserToken": "{UserToken}"
      },
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 3,
        "DurationOfBreak": 30000,
        "TimeoutValue": 10000
      }
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "orders",
      "Config": [
        {
          "Name": "Orders API",
          "Version": "v1",
          "Url": "http://orderservice:8020/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "delivery",
      "Config": [
        {
          "Name": "Delivery API",
          "Version": "v1",
          "Url": "http://deliveryservice:8030/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "users",
      "Config": [
        {
          "Name": "Users API",
          "Version": "v1",
          "Url": "http://userservice:8010/swagger/v1/swagger.json"
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8080"
  }
}